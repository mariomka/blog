 * refï¼šhttps//v1.vuepress.vuejs.org/config/#index-styl
 */

h1
h2
h3
h4
h5
h6
  font-family apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif !important

#header
  box-shadow none

.ui-post
  .ui-post-title
    font-size 32px
    font-family inherit

    a
      font-weight 800
      color $textColor

      &hover
        color $accentColor

  .ui-post-summary
    color $textColor
    font-weight 300
    font-family "PT Serif"

  .ui-post-date
    color rgba($darkTextColor, 0.84)
    font-weight 400

.post-title
  margin-bottom 20px
  font-size 3rem
  font-weight 800

.post-meta
  margin-bottom 30px

.vuepress-blog-theme-content
  font-family inherit !important

  .content__default
    p
    a
      font-family "PT Serif"

  @media (min-width $MQNarrow)
    box-shadow none !important

.header-wrapper
  .title
    text-transform none

  .title a
    font-family inherit
    font-weight 800

  .header-right-wrap .nav .nav-item a
    font-family inherit
    font-weight 400
    font-size 16px

.content-wrapper
  padding-top 120px
  min-height calc(100vh - 80px - 60px - 120px)
  max-width 680px

#vuepress-theme-blog__post-layout
  .vuepress-toc
    padding-top 13rem
    width 220px

.footer .footer-right-wrap .copyright .copyright-item a
  color $textColor !important
